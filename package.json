{
  "name": "sample-project-gulp",
  "version": "1.0.0",
  "description": "The sample project we will use throughout the Gulp chapters",
  "main": "index.js",
  "config": {
    "distDir": "dist"
  },
  "scripts": {
    "predefault": "npm run clean",
    "default": "npm run styles && npm run scripts && npm run html",
    "postdefault": "npm run server:bsync & npm run watch:all",
    "clean": "n-clean $npm_package_config_distDir/* && mkdir -p $npm_package_config_distDir/scripts && mkdir -p $npm_package_config_distDir/styles",
    "styles": "lessc app/styles/main.less | cleancss | postcss --use autoprefixer -o $npm_package_config_distDir/styles/main.min.css",
    "html": "n-copy --source='app' --destination=$npm_package_config_distDir --ignore='{scripts/**,styles/**}' '**/*.html'",
    "lint": "jshint app/scripts --exclude=app/scripts/vendor",
    "prescripts": "npm run lint",
    "scripts": "n-concat 'app/scripts/**' -i 'app/scripts/vendor/**' | uglifyjs -c -m > $npm_package_config_distDir/scripts/main.min.js",
    "server:bsync": "browser-sync start --files $npm_package_config_distDir/**/* --server $npm_package_config_distDir",
    "watch:all": "parallelshell 'npm run watch:scripts' 'npm run watch:styles' 'npm run watch:html'",
    "watch:scripts": "nodemon -e js -w app/scripts --ignore app/scripts/vendor -x 'npm run scripts'",
    "watch:styles": "nodemon -e less -w app/styles -x 'npm run styles'",
    "watch:html": "nodemon -e html -w app -x 'npm run html'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontend-tooling/sample-project-gulp.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/frontend-tooling/sample-project-gulp/issues"
  },
  "homepage": "https://github.com/frontend-tooling/sample-project-gulp#readme",
  "devDependencies": {
    "browser-sync": "^2.10.0",
    "del": "^2.1.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-jshint": "^1.12.0",
    "gulp-less": "^3.0.5",
    "gulp-minify-css": "^1.2.1",
    "gulp-uglify": "^1.5.1",
    "nodemon": "^1.8.1",
    "npm-build-tools": "^2.2.5",
    "parallelshell": "^2.0.0"
  },
  "dependencies": {}
}
